@model StudentiIspitiZadatak.ViewModels.IspitiViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ispiti</h2>

<p>
    @Html.ActionLink("Dodaj ispit", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Ime")
        </th>

        <th>
            @Html.DisplayName("Prezime")
        </th>
        <th>
            @Html.DisplayName("Ispitni Rok")
        </th>
        <th>
            @Html.DisplayName("Predmet")
        </th>
        <th>
            @Html.DisplayName("Broj Bodova")
        </th>
        <th>
            @Html.DisplayName("Datum Roka")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Ispiti)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IspitniRok.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Predmet.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodoviRoka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumRoka)
            </td>

            <td>
                @Html.ActionLink("Izmeni", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                @Html.ActionLink("Obrisi", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

